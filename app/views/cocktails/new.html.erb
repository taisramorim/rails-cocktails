<div class="container mt-5">
  <h1>New Cocktail</h1>

  <%= simple_form_for @cocktail, html: { class: 'mt-4' } do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.input :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :image %>
      <%= f.input :image, as: :file, class: 'form-control-file' %>
    </div>

    <h2>Add Ingredients:</h2>
    <%= f.simple_fields_for :doses, @cocktail.doses.build do |dose_form| %>
      <div class="form-group">
        <%= dose_form.label :description %>
        <%= dose_form.input :description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= dose_form.label :ingredient %>
        <%= dose_form.association :ingredient, class: 'form-control' %>
      </div>
    <% end %>

    <%= f.button :submit, 'Create Cocktail', class: 'btn btn-primary mt-3' %>
  <% end %>

  <%= link_to 'Back to Cocktails', cocktails_path, class: 'btn btn-secondary mt-3' %>
</div>
