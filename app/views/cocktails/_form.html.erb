<%= simple_form_for @cocktail do |f| %>
  <%= f.input :name %>
  <%= f.input :image, as: :file %>

  <h2>Add Ingredients:</h2>
  <%= f.simple_fields_for :doses, @cocktail.doses.build do |dose_form| %>
    <%= dose_form.input :description %>
    <%= dose_form.association :ingredient %>
  <% end %>

  <%= f.button :submit, 'Create Cocktail' %>
<% end %>
